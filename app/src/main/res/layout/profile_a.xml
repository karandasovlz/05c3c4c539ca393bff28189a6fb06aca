<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Узнать, почему важно сдать анализы"
        android:textColor="@color/authui_inputTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"
        android:background="@color/authui_inputTextColor"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Для более детальной проверки здоровья введите данные лабораторных исследований"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="@drawable/knopka_1" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/knopka_21" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>