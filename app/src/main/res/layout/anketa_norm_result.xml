<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ht.healthtarget.Norm_result"
    tools:showIn="@layout/app_bar_main4">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text='Согласно фееральному закону №323-ФЗ от 21.11.2011 "Об основах охраны здоровья граждан Российской Федерации" диагноз устанавливает лечащий врач, используя  полную и всесторонюю информацию о пациенте: данные осмотра, анамнеза, других лабораторнх и инструментальных исследований.'
        android:textColor="@color/authui_inputTextColor"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="5dp"
        android:background="@color/authui_inputTextColor"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Можем Вас поздравить!"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Важно поддержвать такое состояние, для чего мы собрали оптимальную программу здорового питания для Вас"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Соласно полученным данным, вы не находитесь в настоящий момент в группе риска по сердечно-сосудистым заболеваниям!"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/gorecept" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="НЕ ЯВЛЯЕТСЯ ДИАГНОЗОМ!"
            android:textSize="18sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>